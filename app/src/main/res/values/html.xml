    <string name="webview_html_template" translatable="false"><![CDATA[
<!DOCTYPE html>
<html>
    <head>
        <meta charset=\"UTF-8\">
        <meta name=\"viewport\" content=\"width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no\">
        <style type=\"text/css\">

        @font-face {
            font-family: Inter;
            font-style: normal;
            font-weight: normal;
            font-display: swap;
            src: url("fonts/Inter-Regular.woff2") format("woff2");
        }

        a:link, a:active, a:hover { color: %1$s }

        * {
            word-wrap: break-word !important;
        }

        body, blockquote, img, iframe, video, div, table, tbody, tr, td, blockquote, p, em, b, span {
            max-width: 100%% !important;
        }

        body {
            color: %2$s;
            background-color: %3$s;
            font-family: serif !important;
            overflow: hidden;
            column-fill: auto;
            height: 100vh;
            -webkit-column-count: 1;
            column-count: 1;
            -webkit-column-gap: 0%%;
            column-gap: 0%%;
            padding: 0;
            margin:0;
        }

        #article {
            padding: 10%%;
            padding-top: 0px;
            padding-bottom: 0px;
        }

        #article h1 {
            margin-top: 10px;
            margin-bottom: 10px;
        }

        #topRow {
            font-family: sans-serif !important;
        }
        #bottomRow {
            display: flex;
            align-items: center;
            margin-top: 5px;
            font-family: sans-serif !important;
        }
        #bottomRow span {
            padding-left: 10px;
        }

        #content {
            margin-top: 30px;
            text-align: %10$s;
            font-size: %11$s;
            line-height: %12$s;
        }

        figure, img, iframe, video {
            margin: 0px;
            display: inline;
            height: auto;
            max-width: 100%%;
        }

        iframe {
            margin-top: 10px;
            margin-bottom: 10px;
        }

        h1, p, div {
            margin-top: 0px;
        }

        pre, code {
            color: #FFFFFF;
            background-color: #757575;
        }

        pre {
            padding: 6px;
            overflow: auto;
            border-radius: 4px;
        }

        code {
            padding: 2px;
            border-radius: 2px;
        }

        pre > code {
            padding: 0px;
            border-radius: 0px;
        }

        figcaption {
            font-style: italic;
            font-size: small;
            overflow: auto;
            text-align: center;
            padding-left: 3px;
            padding-right: 3px;
            padding-bottom: 10px;
        }

        blockquote {
            margin:30px auto;
            padding:0px 3em;
            border-left: 5px solid %1$s;
            line-height: 1.6;
            position: relative;
        }

        blockquote::before {
            content: \"\\201C\";
            color: %1$s;
            font-size: 4em;
            position: absolute;
            left: 10px;
            top: -10px;
        }

        blockquote::after{
            content: \'\';
        }
        </style>
    </head>

    <body dir=\"%4$s\">
        <div id="article">
            <div id="topRow">%7$s</div>
            <h1>%6$s</h1>
            <div id="bottomRow>
                <img width="24px" height="24px" src="%8$s" />
                <span>%9$s</span>
            </div>
            <div id="content">
                %5$s
            </div>
        </div>
    </body>
</html>]]></string>
